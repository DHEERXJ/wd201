<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link href="index.css" rel="stylesheet">
    <title>Todo</title>
</head>
<body>
<p class="title">Type your TODO here</p>
<div class="page">
    <form class="input">
        <div class="todo">
            <label for="todo">Todo</label>
            <input id="todo" placeholder="Type Your Task..." required type="text">
        </div>
        <div class="date">
            <label for="date">Date</label>
            <input id="date" required type="date">
        </div>
        <div class="add">
            <button id="add" type="submit">Add</button>
        </div>
    </form>
    <div class="tasks">
        <div class="overdue">

            <h5>OverDue
                <span class="todo-count" id="count-overdue">
                [<%= overdueCount %>]
            </span>
            </h5>
            <ol id="overdue">
                <table>
                <% for(let i = 0;i < overdueTodos.length;i++){ %>
                    <tr><td><%= overdueTodos[i].title %></td></tr>
                <% } %></table>
            </ol>
        </div>
        <div class="today">
            <h5>Today
                <span class="todo-count" id="count-due-today">
                [<%= todayCount %>]
            </span>
            </h5>
            <ol id="today">
                <table>
                <% for(let i = 0;i < todayTodos.length;i++){ %>
                    <tr>
                        <td>
                        <%= todayTodos[i].title %>
                    </td></tr>
                <% } %>
            </table>
            </ol>
        </div>
        <div class="upcoming">
            <h5>Upcoming
                <span class="todo-count" id="count-due-later">
                [<%= laterCount %>]
            </span></h5>
            <ol id="upcoming">
                <table>
                <% for(let i = 0;i < laterTodos.length;i++){ %>
                    <tr>
                        <td>
                        <%= laterTodos[i].title %>
                    </td></tr>
                <% } %>
            </table>
            </ol>
        </div>
    </div>
</div>
<script src="index.js"></script>
</body>
</html>
